<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:text="Licht An / Aus"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:paddingLeft="16dp"
            android:layout_centerVertical="true" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_on_off"
            android:layout_gravity="center_vertical"
            android:checked="false"
            android:enabled="false"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1effffff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/action_Pattern">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Caption"
            android:text="Muster"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="16dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:paddingBottom="20dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/textView_Pattern" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:text="Animation"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingTop="20dp" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_animation"
            android:layout_gravity="center_vertical"
            android:checked="false"
            android:enabled="false"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1effffff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:text="Color"
            android:layout_gravity="center_vertical"
            android:paddingLeft="16dp"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Color 1"
            android:id="@+id/button_color1"
            android:textAlignment="center"
            android:layout_marginLeft="16dp"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            style="@style/Base.TextAppearance.AppCompat.Button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Color 2"
            android:id="@+id/button_color2"
            android:layout_marginLeft="8dp"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/button_color1"
            android:layout_marginBottom="16dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Swap"
            android:id="@+id/button_color_swap"
            android:layout_marginLeft="8dp"
            android:background="#5a595b"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1effffff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="104dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:text="Geschwindigkeit"
            android:layout_gravity="center_vertical"
            android:paddingLeft="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingTop="20dp"
            android:id="@+id/textView2" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar_Interval"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100ms"
            android:id="@+id/textView_interval"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/seekBar_Interval" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1effffff"/>

</LinearLayout>