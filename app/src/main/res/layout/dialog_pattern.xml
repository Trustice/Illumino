<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="wrap_content">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_group"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waves"
            android:id="@+id/radioButton_waves"
            android:checked="true"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rainbow Long"
            android:id="@+id/radioButton_rainbow_long"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rainbow Short"
            android:id="@+id/radioButton_rainbow_short"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Theater"
            android:id="@+id/radioButton_theater"
            android:layout_marginBottom="8dp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanner"
            android:id="@+id/radioButton_scanner"
            android:layout_marginBottom="8dp" />

    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Cancel"
            android:id="@+id/button_cancel"
            android:background="#00000000" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="OK"
            android:id="@+id/button_okay"
            android:background="#00000000"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

</LinearLayout>